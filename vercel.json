{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "outputDirectory": "dist/angular-complete-2025/browser"
      }
    },
    { "src": "api/**/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/(.*)", "has": [{ "type": "file" }], "dest": "/dist/angular-complete-2025/browser/$1" },
    { "src": "/(.*)", "dest": "/dist/angular-complete-2025/browser/index.html" }
  ]
}